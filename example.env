# Individual Postgres params (used in dev/test configs)
PGUSER=nadhm
PGPASSWORD=password
PGDBNAME=nadhm
PGHOST=localhost
PGDEVHOST=localhost

SECRET_KEY_BASE=a_secure_random_string

# Non-secret environment variables for StudTasks application
# --- Server runtime ---
# Set to true to start the Phoenix server when running a release
# Ref: config/runtime.exs (PHX_SERVER gate)
PHX_SERVER=true

# Public hostname used in generated links and URL config
# Ref: config/runtime.exs (host)
PHX_HOST="127.0.0.1"

# HTTP port the app listens on
# Ref: config/runtime.exs (port)
PORT=4000

# --- Database runtime ---
# Ecto pool size for the Repo
# Ref: config/runtime.exs (POOL_SIZE)
POOL_SIZE=10

# Enable IPv6 for Ecto if needed (true|1 enables)
# Ref: config/runtime.exs (ECTO_IPV6)
ECTO_IPV6=false
